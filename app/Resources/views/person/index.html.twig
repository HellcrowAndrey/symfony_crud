{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h2 class="page-header">People</h2>
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Age</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for p in pp %}
                        <tr>
                            <th scope="row">{{ p.id }}</th>
                            <td>{{ p.fname }}</td>
                            <td>{{ p.lname }}</td>
                            <td>{{ p.age }}</td>
                            <td>
                                <a href="/{{ p.id }}" class="btn btn-success">Edit</a>
                                <a href="/person/delete/{{ p.id }}" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
            <div class="col-md-4">
                <h2 class="page-header">Control Panel</h2>
                {% block main %}
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                {% endblock %}
            </div>
        </div>
    </div>


{% endblock %}